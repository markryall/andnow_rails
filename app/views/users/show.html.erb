<div class="hero-unit">
  <div class="span1 offset3">
    <img src="<%= gravatar_url @user.email %>">
  </div>
  <div class="span4">
    <h1><%= @user.email %></h1>
  </div>
</div>

<div class="row">
  <div class="span6">
    <h2>Timezone</h2>

    <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
      <%= f.time_zone_select :timezone %>
      <%= f.submit 'Update', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div class="span6">
    <h2>Tokens</h2>

    <ul>
      <% @user.tokens.each do |token| %>
        <li>
        <%= token.key %>
        <%= link_to token, confirm: 'Are you sure?', method: :delete do %>
          <i class="icon-remove-circle"></i>
        <% end %>
      </li>
      <% end %>
    </ul>

    <%= form_for @token, html: {class: 'form-horizontal'} do |f| %>
      <%= f.text_field :key, placeholder: 'API Token', class: 'input-xlarge' %>
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

